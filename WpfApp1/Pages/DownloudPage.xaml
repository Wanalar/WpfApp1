        <Label Content="Прописать путь к файлу" HorizontalAlignment="Left" Margin="244,64,0,0" VerticalAlignment="Top" Width="318" FontSize="22" FontFamily="Segoe UI Black"/>
        <Label Content="Выбрать работу" HorizontalAlignment="Left" Margin="314,146,0,0" VerticalAlignment="Top" Height="40" Width="179" FontSize="22" FontFamily="Segoe UI Black"/>
        <Label Content="Загрузка" HorizontalAlignment="Left" Margin="314,236,0,0" VerticalAlignment="Top" Height="40" Width="179" FontSize="22" FontFamily="Segoe UI Black"/>
    </Grid>

</Page>